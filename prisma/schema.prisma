generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int         @id
  name         String
  description  String?
  price        Decimal
  rating       Decimal?
  image        String?
  category     String
  unit         String?
  discount     Decimal?
  availability Boolean?
  brand        String?
  syncedAt     DateTime    @default(now())
  orderItems   OrderItem[]
  reviews      Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  productId Int
  userId    Int
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([productId, userId])
}

model Order {
  id         Int         @id @default(autoincrement())
  externalId Int?        @unique
  userId     Int
  status     String
  totalPrice Decimal
  syncedAt   DateTime    @default(now())
  createdAt  DateTime    @default(now())
  items      OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
}
